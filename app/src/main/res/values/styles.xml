<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar"></style>

    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="login_input_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">#666666</item>
        <item name="android:background">@drawable/em_ic_textfield</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="login_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:typeface">serif</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">17sp</item>
    </style>

    <!-- settings -->
    <style name="settings_cell_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">#1A1A1A</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="settings_cell_right_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color_gray</item>
    </style>

    <style name="settings_cell_left_text_style" parent="settings_cell_right_text_style">
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="settings_cell_right_arrow_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/em_ic_right_arrow</item>
    </style>

    <!-- settings -->

    <!-- chat activity -->
    <style name="chat_controller_btn_style">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <!-- chat activity -->

    <style name="activity_main_text_style">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="dialog_join_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_hint</item>
        <item name="android:textSize">12sp</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="dialog_join_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="SwitchStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">#00000000</item>
        <item name="colorSwitchThumbNormal">#00000000</item>
        <item name="android:colorForeground">#00000000</item>
    </style>

    <style name="settings_switch_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/em_bg_switch</item>
        <item name="showText">false</item>
        <item name="splitTrack">false</item>
        <item name="theme">@style/SwitchStyle</item>
        <item name="thumbTint">#00000000</item>
        <item name="trackTint">#00000000</item>
    </style>

</resources>
