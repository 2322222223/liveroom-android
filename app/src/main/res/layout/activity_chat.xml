<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hyphenate="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:orientation="vertical"
        android:padding="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_room_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_normal"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_hint"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <com.hyphenate.liveroom.widgets.StateImageButton
                    android:id="@+id/btn_music"
                    style="@style/chat_controller_btn_style"
                    android:onClick="onClick"
                    android:src="@drawable/em_ic_music"
                    hyphenate:border="gray" />

                <com.hyphenate.liveroom.widgets.StateImageButton
                    android:id="@+id/btn_contacts"
                    style="@style/chat_controller_btn_style"
                    android:onClick="onClick"
                    android:src="@drawable/em_ic_contacts"
                    hyphenate:border="gray" />

                <com.hyphenate.liveroom.widgets.StateImageButton
                    android:id="@+id/btn_share"
                    style="@style/chat_controller_btn_style"
                    android:onClick="onClick"
                    android:src="@drawable/em_ic_share"
                    hyphenate:border="gray" />

                <com.hyphenate.liveroom.widgets.StateImageButton
                    android:id="@+id/btn_detail"
                    style="@style/chat_controller_btn_style"
                    android:onClick="onClick"
                    android:src="@drawable/em_ic_equalizer"
                    hyphenate:border="gray" />

                <com.hyphenate.liveroom.widgets.StateImageButton
                    android:id="@+id/btn_exit"
                    style="@style/chat_controller_btn_style"
                    android:onClick="onClick"
                    android:src="@drawable/em_ic_exit"
                    hyphenate:border="gray" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_room_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_type_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_color_gray"
                android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/container_chat"
                android:layout_alignParentTop="true">

                <FrameLayout
                    android:id="@+id/container_member"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="vertical" />
            </ScrollView>

            <FrameLayout
                android:id="@+id/container_chat"
                android:layout_width="match_parent"
                android:layout_height="156dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp" />

            <ImageView
                android:id="@+id/iv_request_tobe_talker"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_above="@+id/container_chat"
                android:layout_alignParentRight="true"
                android:src="@drawable/em_ic_tobe_talker"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>