<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:background="@drawable/em_bg_border_gray"
    android:padding="20dp"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/button_height"
            android:layout_height="@dimen/button_height"
            android:src="@mipmap/ic_launcher"
            />

        <ImageButton
            android:id="@+id/ib_close"
            android:layout_width="@dimen/button_height"
            android:layout_height="@dimen/button_height"
            android:layout_alignParentRight="true"
            android:src="@drawable/em_ic_exit"
            android:background="@android:color/transparent"
            android:padding="15dp"/>


        <LinearLayout
            android:layout_toRightOf="@id/iv_logo"
            android:layout_toLeftOf="@id/ib_close"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EASEMOB"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="voiceChatRoom"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                />

        </LinearLayout>



    </RelativeLayout>

    <TextView
        android:id="@+id/tv_room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        tools:text="房间 ASD123"
        />

    <TextView
        android:id="@+id/tv_room_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@color/gray"
        android:textSize="12sp"
        tools:text="房主: username"
        />

    <TextView
        android:id="@+id/tv_room_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/gray"
        android:textSize="12sp"
        tools:text="密码：12312477"
        />

    <Button
        android:id="@+id/btn_share"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="15sp"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:text="分享给微信好友"
        android:textSize="17sp"
        />
</LinearLayout>