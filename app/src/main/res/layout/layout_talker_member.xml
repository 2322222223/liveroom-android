<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32dp">

        <View
            android:id="@+id/indicator_talker"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_centerVertical="true"
            android:background="@drawable/em_dot_off" />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/indicator_talker"
            android:ellipsize="end"
            android:maxWidth="200dp"
            android:singleLine="true"
            android:text="disconnected"
            android:textColor="@color/text_normal"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_king"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/txt_name"
            android:src="@drawable/em_ic_king"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_time_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="22dp"
            android:textColor="@color/text_normal"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/indicator_talking"
            android:layout_width="9dp"
            android:layout_height="16dp"
            android:scaleType="centerCrop"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/em_ic_speaking_0"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/container_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" />
</LinearLayout>