<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/et_sendmessage"
        android:layout_width="0dp"
        android:layout_height="@dimen/chat_input_height"
        android:layout_weight="1"
        android:background="@drawable/em_edittext_border_login"
        android:gravity="center_vertical"
        android:hint="@string/input_hint_say_your_heart"
        android:imeOptions="actionSend"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textColorHint="@color/text_color_gray"
        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/btn_heart"
        android:layout_width="@dimen/chat_input_height"
        android:layout_height="@dimen/chat_input_height"
        android:layout_marginLeft="10dp"
        android:background="@android:color/white"
        android:scaleType="fitCenter"
        android:src="@drawable/em_ic_heart" />

    <ImageButton
        android:id="@+id/btn_gift"
        android:layout_width="@dimen/chat_input_height"
        android:layout_height="@dimen/chat_input_height"
        android:layout_marginLeft="10dp"
        android:background="@android:color/white"
        android:scaleType="fitCenter"
        android:src="@drawable/em_ic_gift" />
</LinearLayout>